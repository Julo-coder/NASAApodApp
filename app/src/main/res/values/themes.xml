<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark_color</item>

        <!-- Customize other theme attributes as needed -->
    </style>

    <style name="NASAAppBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item> <!-- Makes the back arrow white -->
    </style>

    <style name="ThemeOverlay.AppCompat.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Popup menu style -->
    </style>
</resources>